<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SampleDataMapper">
    <resultMap id="SampleDataResultMap" type="SampleData">
        <id property="ID" column="ID" />
        <id property="SEQ" column="SEQ" />
        <result property="NAME" column="NAME" />
    </resultMap>

    <select id="findAll" resultMap="SampleDataResultMap">
        SELECT
          ID,
          SEQ,
          NAME
        FROM
          sample_data
    </select>

    <insert id="insert"
            parameterType="SampleData">
        INSERT INTO
          sample_data
          (
            ID,
            SEQ,
            NAME
          )
        VALUES
        (
          #{ID},
          #{SEQ},
          #{NAME}
        )
    </insert>

    <update id="update"
            parameterType="SampleData">
        UPDATE
          sample_data
        SET
          ID = #{ID},
          SEQ = #{SEQ},
          NAME = #{NAME}
    </update>
</mapper>